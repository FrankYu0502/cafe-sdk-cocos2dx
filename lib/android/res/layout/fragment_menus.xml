<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gl_img_plate"
    tools:context="com.naver.glink.android.sdk.ui.MenusFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:baselineAligned="false"
      android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:clickable="true"
        android:layout_weight="1"
        android:background="@color/white2"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/cafe_background_img"
          android:layout_width="match_parent"
          android:scaleType="centerCrop"
          android:layout_height="88dp"/>

      <View
          android:id="@+id/cafe_background_img_dimmed"
          android:layout_width="match_parent"
          android:layout_height="88dp"
          android:background="@color/black2_opacity_20"/>

      <FrameLayout
          android:id="@+id/thumbnail_image"
          android:layout_width="64dp"
          android:layout_height="64dp"
          android:layout_marginTop="52dp"
          android:layout_marginLeft="22dp">

        <ImageView
            android:id="@+id/cafe_icon_img"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/cafe_icon_img_stroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gl_ls_icon_cafeimgst"
            android:layout_gravity="center"/>
      </FrameLayout>

      <TextView
          android:id="@+id/cafe_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="22dp"
          android:layout_marginRight="22dp"
          android:layout_marginTop="0dp"
          android:maxLines="2"
          android:ellipsize="end"
          android:textSize="24dp"
          android:textColor="@color/black2"
          android:textStyle="bold"
          android:layout_below="@+id/thumbnail_image"
          android:text="cafe name"/>

      <TextView
          android:id="@+id/cafe_member_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="22dp"
          android:layout_marginTop="9dp"
          android:maxLines="2"
          android:ellipsize="end"
          android:textSize="12dp"
          android:textColor="@color/gray4"
          android:layout_below="@+id/cafe_name"
          android:text="@string/member_count_format"/>

      <TextView
          android:id="@+id/channels_button"
          android:layout_width="wrap_content"
          android:layout_height="22dp"
          android:layout_marginLeft="22dp"
          android:layout_marginRight="22dp"
          android:layout_marginBottom="23dp"
          android:minWidth="90dp"
          android:background="@drawable/gl_menu_language_selector_background"
          android:drawableRight="@drawable/gl_btn_boardlistmenu"
          android:drawablePadding="4dp"
          android:gravity="start|center_vertical"
          android:textColor="@color/black2"
          android:textSize="11dp"
          android:singleLine="true"
          android:layout_marginTop="3dp"
          android:layout_alignParentBottom="true"
          android:paddingLeft="5dp"
          android:paddingRight="5dp"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/menus_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@drawable/gl_list_selector"
        android:cacheColorHint="@android:color/transparent"/>
  </LinearLayout>

  <include layout="@layout/view_fragment_error"/>
</FrameLayout>
